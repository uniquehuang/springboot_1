<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zjy.mapper.UserMapper">
    <insert id="addUser" parameterType="RegisterUser">
        insert into user(userphone,password,username,gender) values(#{userphone},#{password},#{username},#{gender})
    </insert>
    
    <select id="getUserCodeList" resultType="UserCode">
        select * from user order by code desc limit 10;
    </select>
    
    <update id="updateUserCodeById" parameterType="UserTotalCode">
        update user set code=#{code},
                        pkcode=#{pkcode},
                        replycode=#{replycode},
                        level=#{level},
                        drawright=#{drawright},
                        studydayscount=#{studydayscount},
                        dzcount=#{dzcount} where id=#{id}
    </update>



</mapper>
