<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjy.mapper.PersonMapper">

    <select id="getPersonList" resultType="PersonPart">
        select * from person;
    </select>
    <select id="getFirstPersonList" resultType="PersonPart">
        select * from person limit 0,4;
    </select>

    <select id="getSecondPersonList" resultType="PersonPart">
        select * from person limit 4,4;
    </select>

    <select id="getThirdPersonList" resultType="PersonPart">
        select * from person limit 8,4;
    </select>
    <select id="getFourthPersonList" resultType="PersonPart">
        select * from person limit 12,4;
    </select>
</mapper>
